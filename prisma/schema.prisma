generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model PlaidAccount {
  id            String   @id @default(uuid())
  plaidAccountId String  @unique
  name          String
  mask          String?
  type          String
  subtype       String?
  institutionId String
  linkTokenId   String
  accessToken   String   // Plaid access token
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  transactions PlaidTransaction[]
  budgets      Budget[]
  linkToken    PlaidLinkToken @relation(fields: [linkTokenId], references: [id])

  @@index([plaidAccountId])
  @@index([institutionId])
}

model PlaidTransaction {
  id              String   @id @default(uuid())
  plaidTransactionId String @unique
  accountId       String
  amount          Decimal  @db.Decimal(12, 2)
  currency        String   @default("USD")
  date            DateTime
  name            String
  merchantName    String?
  category        String
  categoryIcon    String?
  pending         Boolean  @default(false)
  paymentChannel  String?
  transactionType String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  account PlaidAccount @relation(fields: [accountId], references: [id])

  // Basic indexes
  @@index([accountId])
  @@index([date])
  @@index([pending])
  
  // Composite indexes for common query patterns
  @@index([accountId, date])
  @@index([category, amount])
  @@index([accountId, category])
  @@index([date, pending])
  @@index([name])
  @@index([merchantName])
}

model PlaidLinkToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  accounts PlaidAccount[]

  @@index([token])
  @@index([expiresAt])
}

model Budget {
  id              String   @id @default(uuid())
  userId          String   // For multi-user support
  name            String
  budgetType      String   // "CATEGORY", "MERCHANT", "ACCOUNT", "TOTAL"
  targetValue     String?  // For category budgets
  merchantName    String?  // For merchant-specific budgets  
  accountId       String?  // For account-specific budgets
  amount          Decimal  @db.Decimal(12, 2)
  period          String   // "MONTHLY", "WEEKLY", "YEARLY", "CUSTOM"
  startDate       DateTime
  endDate         DateTime?
  isActive        Boolean  @default(true)
  alertThreshold  Int      @default(80) // Percentage for warnings
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  account         PlaidAccount? @relation(fields: [accountId], references: [id])
  alerts          BudgetAlert[]
  
  @@index([userId])
  @@index([budgetType])
  @@index([targetValue])
  @@index([merchantName])
  @@index([startDate, endDate])
}

model BudgetAlert {
  id          String   @id @default(uuid())
  budgetId    String
  alertType   String   // "WARNING", "EXCEEDED", "APPROACHING"
  triggeredAt DateTime @default(now())
  amount      Decimal  @db.Decimal(12, 2)
  percentage  Int
  isRead      Boolean  @default(false)
  
  // Relations
  budget      Budget   @relation(fields: [budgetId], references: [id])
  
  @@index([budgetId])
  @@index([triggeredAt])
} 